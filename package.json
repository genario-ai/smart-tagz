{
  "name": "smart-tagz",
  "version": "0.2.0",
  "license": "MIT",
  "description": "A Smart input tags component for Vue 3",
  "author": {
    "name": "Prabhu Murthy",
    "url": "https://www.prabhumurthy.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "rollup": "rimraf ./dist && rollup -c",
    "lint:css": "stylelint src/**/*.vue",
    "lint": "eslint src/**/*.vue",
    "lint:all": "yarn lint:css && yarn lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prabhuignoto/smart-tagz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.scss": [
      "stylelint src/**/*.scss",
      "git add"
    ],
    "src/**/*.vue": [
      "eslint src/**/*.vue",
      "git add"
    ]
  },
  "dependencies": {
    "vue-feather-icons": "^5.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-beep": "^0.2.0",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-sucrase": "^3.1.0",
    "@types/nanoid": "^2.1.0",
    "@types/vue-feather-icons": "^5.0.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@vitejs/plugin-vue": "^1.1.4",
    "@vue/compiler-sfc": "^3.0.5",
    "eslint": "^7.19.0",
    "eslint-plugin-vue": "^7.5.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "rollup": "^2.38.1",
    "rollup-plugin-scss": "^2.6.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.32.5",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^4.1.3",
    "vite": "^2.0.0-beta.60",
    "vue": "^3.0.5",
    "vue-template-compiler": "2.6.12"
  },
  "files": [
    "dist",
    "types"
  ],
  "peerDependencies": {
    "vue-feather-icons": "^5.1.0"
  },
  "main": "dist/smart-tagz.js",
  "module": "dist/smart-tagz.esm.js",
  "umd": "dist/smart-tagz.umd.js"
}
